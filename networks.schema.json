{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "definitions": {
    "api_type": {
      "type": "string",
      "enum": [
        "evm",
        "tendermint-rpc",
        "tendermint-http",
        "cosmos-http",
        "tendermint-ws",
        "cosmos-grpc",
        "evm-ws",
        "blockcypher",
        "esplora"
      ]
    },
    "api": {
      "type": "object",
      "properties": {
        "url": {
          "type": "string"
        },
        "type": {
          "$ref": "#/definitions/api_type"
        }
      },
      "required": [
        "url",
        "type"
      ],
      "additionalProperties": false
    }
  },
  "patternProperties": {
    "^.*$": {
      "type": "object",
      "properties": {
        "chain_id": {
          "type": "integer"
        },
        "chain_name": {
          "type": "string"
        },
        "bech32_prefix": {
          "type": "string",
          "nullable": true
        },
        "chain_aliases": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "fees": {
          "type": "object",
          "properties": {
            "assets": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "denom": {
                    "type": "string"
                  },
                  "gas": {
                    "type": "number"
                  },
                  "gas_price": {
                    "type": "number"
                  }
                },
                "required": [
                  "denom",
                  "gas",
                  "gas_price"
                ]
              }
            }
          }
        },
        "assets": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "denoms": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "denom": {
                      "type": "string"
                    },
                    "exponent": {
                      "type": "number"
                    }
                  },
                  "required": [
                    "denom",
                    "exponent"
                  ]
                }
              },
              "base": {
                "type": "string"
              },
              "symbol": {
                "type": "string"
              }
            },
            "required": [
              "denoms",
              "base",
              "symbol"
            ]
          }
        },
        "apps": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "type": {
                "type": "string"
              },
              "url": {
                "type": "string"
              },
              "tx": {
                "type": "string"
              },
              "address": {
                "type": "string"
              }
            },
            "required": [
              "type",
              "url",
              "tx",
              "address"
            ]
          }
        },
        "staking": {
          "type": "object",
          "properties": {
            "denom": {
              "type": "string"
            }
          },
          "nullable": true
        },
        "api": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/api"
          }
        }
      },
      "required": [
        "chain_id",
        "chain_name"
      ],
      "additionalProperties": false
    }
  }
}